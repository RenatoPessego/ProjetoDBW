<!DOCTYPE html>
<html>
  <head>
    <title>Suporte</title>
    <link rel="stylesheet" href="../stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css?family=Caveat"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white dark:bg-white dark:text-black">
    <div><%- include ('navbar.ejs') %></div>
    <div class="fonte-cairo font-bold ml-10 mt-20 text-7xl">Suporte</div>
    <hr
      class="w-11/12 h-[0.5px] mx-auto my-4 bg-gray-100 border-0 rounded md:my-4 dark:bg-gray-700"
    />
    <div class="ml-10 text -4xl font-medium text-red-500"><%= Erro %></div>
    <div
      class="fonte-cairo pt-32 text-black text-4xl font-bold font-['Cairo'] text-center"
    >
      Bem-vindo ao Suporte da House Dream!
    </div>
    <br />
    <div
      class="mb-10 mt-10 space-y-10 xl:space-y-10 lg:space-y-10 md:space-y-10 sm:space-y-10 justify-items-center grid grid-cols-1 xl:grid-cols-3 lg:grid-cols-3 md:grid-cols-1 sm:grid-cols-1 text-1xl xl:text-2xl lg:text-2xl md:text-2xl sm:text-1xl"
    >
      <% salas.forEach(salas=> { %>
      <div class="text-white dark:text-white card w-80 bg-[#002660] shadow-xl">
        <div class="card-body items-center text-center">
          <h2 class="card-title"><%= salas.hostID %></h2>
          <div class="card-actions mt-4 items-center">
            <a href="../chatadmin/chat?hostID=<%= salas.hostID %>">
              <button class="btn btn-primary">Entrar</button>
            </a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
  <footer class="mt-60"><%- include ('footer.ejs') %></footer>
</html>
